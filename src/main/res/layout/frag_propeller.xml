<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Propeller">

    <TextView
        android:id="@+id/prop_title"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:text="Propeller Reccomendation"
        android:textAlignment="center"
        android:textColor="#90B392"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/prop_flavortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="\nPropeller sizes are reccomended by engine classifications. \n\n\n\nPlease input engine size (cc)."
        android:textStyle="italic" />

    <RadioGroup
        android:id="@+id/prop_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/prop_2cycleradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2-Cycle"
            android:textSize="13sp"
            android:textColor="#90B392"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/prop_4cycleradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4-Cycle"
            android:textSize="13sp"
            android:textColor="#90B392"
            android:textStyle="bold"/>
    </RadioGroup>

    <EditText
        android:id="@+id/prop_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Ex: .45"
        android:textColorHint="#90B392"/>

    <TextView
        android:id="@+id/prop_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:gravity="center"
        android:text="Ex: Disk diameter x Propeller pitch.\n Propeller size reccomendation(s):"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/prop_cycletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="247dp"
        android:text="Please choose engine type."
        android:textStyle="italic" />
</RelativeLayout>